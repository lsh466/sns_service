<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입 "
        android:gravity="center"
        android:textSize="30dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:id="@+id/tv_id"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_id"
            android:id="@+id/et_id"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/et_id"
            android:text="중복확인"
            android:id="@+id/bt_idConfirm"/>



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="ID중복 확인을 해주세요."
        android:id="@+id/tv_idConfirm"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PW"
            android:id="@+id/tv_pw1"
            android:gravity="center"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pw1"
            android:id="@+id/et_pw1"
            android:inputType="textPassword"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PW 확인"
            android:id="@+id/tv_pw2"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pw2"
            android:id="@+id/et_pw2"
            android:inputType="textPassword"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:id="@+id/tv_email"
            android:gravity="center"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_email"
            android:id="@+id/et_email"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="가입"
        android:id="@+id/bt_confirm"
        />

</LinearLayout>